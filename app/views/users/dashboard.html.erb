<section>
    <h1>Dashboard for 
        <% if current_user.provider == "facebook" %> 
            <%= current_user.name %> 
        <% else %> 
            <%= current_user.first_name %> 
        <% end %>
    </h1>
    
    <div class="dash-container">
        <ul>
            <li class="dash-item">
                <button class="your-tasks"><a class="your-tasks-link" href="/users/<%= current_user.id %>/tasks">Your<br> Tasks</a></button>
            </li>
            <li class="dash-item">
                <button class="task-groups"><a class="task-groups-link" href="/projects">All<br> Projects</a></button>
            </li>
            <li class="dash-item">
                <button class="create-group"><a class="create-group-link" href="/projects/new">Create<br> Project</a></button>
            </li>
        </ul>
    </div>
</section>