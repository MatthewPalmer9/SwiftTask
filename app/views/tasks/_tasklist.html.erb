<table class="table-labels">
  <thead>
    <tr>
      <th scope="col">Task</th>
      <th scope="col">Project</th>
      <th scope="col">Due Date </th>
      <th scope="col">Assigned To</th>
      <th scope="col">Edit/Delete</th>
      <th scope="col">Complete</th>
    </tr>
  </thead>
  <tbody style="width:100%">
    <% @tasks.all.each do |task| %>
      <% if !task.completed %>
        <tr>
            <td><%= task.description %></td>
            <td> <%= task.project.name %> </td>
            <td> <%= task.due_date.strftime("%B %d, %Y") unless task.due_date.nil?  %> </td>
            <td> <%= task.user.name %> </td>
            
            <td> <%= link_to "Edit", edit_task_path(task) %> <hr> <%=  link_to 'Delete', "/destroy/#{task.id}", method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }  %> </td>
            <%# <% binding.pry %> %>
            <td> <a class="" href="/tasks/<%= task.id %>/complete">Complete </a>  </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
